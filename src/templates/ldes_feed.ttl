{#
    ldes fragment template
    | Description: This template is used to generate the LDES fragment
    | @param this_fragment_delta: The hash of this fragment
    | @param next_fragment_delta: The hash of the next fragment (previous hash)
    | @param retention_period: The retention period of the fragment
    | @param concepts: All the concepts in the fragment
    | @param shacl_constraints: The SHACL constraints for the fragment
#}
@prefix tree: <https://w3id.org/tree#> .
@prefix ldes: <https://w3id.org/ldes#> .
@prefix dc: <http://purl.org/dc/terms/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .

<http://open-science.vliz.be/ldes_translation_gh_action/ldes/{{this_fragment_delta}}>
    a tree:Node ;
    {% if next_fragment_delta %}
    tree:relation [ tree:node <http://open-science.vliz.be/ldes_translation_gh_action/ldes/{{next_fragment_delta}}> ] ;
    {% endif %}
    ldes:retentionPolicy [
        a ldes:LatestVersionSubset ;
        ldes:amount {{retention_period}} ;
        ldes:versionKey ( dc:isVersionOf )
    ] .

<http://open-science.vliz.be/ldes_translation_gh_action/ldes>
  a ldes:EventStream ;
  tree:shape <http://open-science.vliz.be/ldes_translation_gh_action/ldes/ldes_constraints.ttl> ;
  tree:view <http://open-science.vliz.be/ldes_translation_gh_action/ldes/{{this_fragment_delta}}> ;
  .

{% for result in concepts -%}
<http://open-science.vliz.be/ldes_translation_gh_action/ldes> tree:member <{{result.uri}}> .
<{{result.uri}}>
    a skos:Concept ;
    {% for label in result.labels -%}
    <{{label.path}}> "{{label.original}}"
    {% for translation in label.translations -%}
    {%- for key, value in translation.items() -%}
    {%- if loop.first -%}
    ,
    {%- endif -%}
    {% if value -%}
    "{{value}}"@{{key}}
    {% endif %}
    {%- endfor -%}
    {%- endfor -%};
    {%- endfor -%}
  .
{% endfor %} 